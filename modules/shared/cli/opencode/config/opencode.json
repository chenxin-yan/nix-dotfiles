{
  "$schema": "https://opencode.ai/config.json",
  "theme": "catppuccin",
  "permission": {
    "edit": "ask",
    "bash": "ask"
  },
  "mcp": {
    "context7": {
      "type": "local",
      "command": ["npx", "-y", "@upstash/context7-mcp"],
      "enabled": true
    },
    "convex": {
      "type": "local",
      "command": ["npx", "-y", "convex@latest", "mcp", "start"],
      "enabled": true
    }
  }
}
